@model Mezzex_Inventory_Mangement.Models.SellingChannel

@{
    ViewData["Title"] = "Delete Selling Channel";
}

<h1 class="text-center text-danger">Delete Selling Channel</h1>
<h3 class="text-center text-danger">Are you sure you want to delete this selling channel?</h3>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow" style="min-height: 300px;">
                <div class="card-header bg-danger text-white">
                    <h5>Selling Channel Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Left Column for Selling Channel Details -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <strong>Selling Channel Name:</strong>
                                <p>@Model.SellingChannelName</p>
                            </div>
                            <div class="mb-3">
                                <strong>Company Address:</strong>
                                <p>@Model.Company?.Address</p>
                            </div>
                            <div class="mb-3">
                                <strong>Created On:</strong>
                                <p>@Model.CreatedOn?.ToString("yyyy-MM-dd")</p>
                            </div>
                            <div class="mb-3">
                                <strong>Created By:</strong>
                                <p>@Model.CreatedBy</p>
                            </div>
                        </div>

                        <!-- Right Column for Additional Details -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <strong>Modified On:</strong>
                                <p>@Model.ModifiedOn?.ToString("yyyy-MM-dd")</p>
                            </div>
                            <div class="mb-3">
                                <strong>Modified By:</strong>
                                <p>@Model.ModifiedBy</p>
                            </div>
                            <div class="mb-3">
                                <strong>Is Deleted:</strong>
                                <p>@(Model.IsDeleted ? "Yes" : "No")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Form -->
<div class="text-center mt-4">
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="SellingChannelId" />
        <button type="submit" class="btn btn-danger me-2">Confirm Delete</button>
        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
    </form>
</div>
