@model Mezzex_Inventory_Mangement.Models.SellingChannel

@{
    ViewData["Title"] = "Selling Channel Details";
}

<h1 class="text-center">Selling Channel Details</h1>

<div class="container mt-4">
    <div class="row justify-content-center">
        <!-- Selling Channel Details Card -->
        <div class="col-md-6">
            <div class="card shadow mb-3" style="min-height: 400px;">
                <div class="card-header bg-info text-white">
                    <h5>Selling Channel Information</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Selling Channel Name:</strong>
                        <p>@Model.SellingChannelName</p>
                    </div>
                    <div class="mb-3">
                        <strong>Company Address:</strong>
                        <p>@Model.Company?.Address</p>
                    </div>
                    <div class="mb-3">
                        <strong>Created On:</strong>
                        <p>@Model.CreatedOn.GetValueOrDefault().ToString("yyyy-MM-dd")</p>

                    </div>
                    <div class="mb-3">
                        <strong>Created By:</strong>
                        <p>@Model.CreatedBy</p>
                    </div>
                    <div class="mb-3">
                        <strong>Modified On:</strong>
                        <p>@Model.ModifiedOn.GetValueOrDefault().ToString("yyyy-MM-dd")</p>
                    </div>
                    <div class="mb-3">
                        <strong>Modified By:</strong>
                        <p>@Model.ModifiedBy</p>
                    </div>
                    <div class="mb-3">
                        <strong>Is Deleted:</strong>
                        <p>@(Model.IsDeleted ? "Yes" : "No")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-2">
    <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model?.SellingChannelId">Edit</a>
    <a class="btn btn-secondary ms-2" asp-action="Index">Back to List</a>
</div>
