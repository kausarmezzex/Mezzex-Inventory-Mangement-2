@model Mezzex_Inventory_Mangement.ViewModels.ForgotPasswordViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Forgot Password</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/3.1.0/css/adminlte.min.css">
    <style>
        /* Center the login box on the screen */
        .login-container {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            background-color: #f4f6f9;
            margin: 0;
        }

        .login-box {
            width: 400px;
            background-color: #000;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
            color: #fff;
        }

        .login-header {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 20px;
        }

        .login-logo img {
            width: 50px;
            height: 50px;
            border-radius: 5px;
            margin-right: 10px;
            margin-top: 21px;
        }

        .login-title {
            font-size: 24px;
            font-weight: 600;
            color: #fff;
        }

        .form-control-icon {
            position: relative;
        }

            .form-control-icon .input-icon-left {
                position: absolute;
                left: 10px;
                top: 50%;
                transform: translateY(-50%);
                color: #ffffff;
            }

        .form-control {
            padding-left: 35px;
            background-color: #222;
            border: 1px solid #444;
            color: #fff;
        }

            .form-control::placeholder {
                color: #ccc;
            }

            .form-control:focus {
                background-color: #222;
                color: #fff;
            }

        .btn-primary {
            color: #fff;
        }
    </style>
</head>
<body class="login-container">
    <div class="login-box">
        <div class="login-header">
            <div class="login-logo">
                <img src="https://res.cloudinary.com/ddsenadu2/image/upload/v1728712730/mezzex-logo_jtfk6m.png" alt="Mezzex Logo" />
            </div>
            <div class="login-title">Forgot Password</div>
        </div>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        <div class="login-box-body">
            <form asp-action="ForgotPassword" method="post">
                <div class="form-group form-control-icon">
                    <i class="fas fa-envelope input-icon-left"></i>
                    <label asp-for="Email" class="sr-only">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-block mt-4">
                    Send OTP
                </button>
            </form>
        </div>
    </div>
</body>
</html>
