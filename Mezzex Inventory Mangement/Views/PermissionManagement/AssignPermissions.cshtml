@using Mezzex_Inventory_Mangement.ViewModels
@model RolePermissionViewModel

@{
    ViewData["Title"] = "Assign Permissions";
}

<h2>Assign Permissions to Role: @Model.RoleName</h2>

<form asp-action="AssignPermissions" method="post">
    <input type="hidden" asp-for="RoleId" />

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Permission</th>
                <th>Page</th>
                <th>Assigned</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Permissions.Count; i++)
            {
                <tr>
                    <td>@Model.Permissions[i].PermissionName</td>
                    <td>@Model.Permissions[i].Page</td>
                    <td>
                        <input type="checkbox" asp-for="Permissions[i].IsAssigned" />
                        <input type="hidden" asp-for="Permissions[i].PermissionId" />
                        <input type="hidden" asp-for="Permissions[i].PermissionName" />
                        <input type="hidden" asp-for="Permissions[i].Page" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

