@model IEnumerable<Mezzex_Inventory_Mangement.Models.ApplicationRole>

@{
    ViewData["Title"] = "Role Permissions";
}

<h2>Role Permissions</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Permissions</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    @if (role.RolePermissions.Any())
                    {
                        <ul>
                            @foreach (var permission in role.RolePermissions)
                            {
                                <li>@permission.Permission.Name (@permission.Permission.Page)</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span class="text-muted">No permissions assigned</span>
                    }
                </td>
                <td>
                    <a asp-action="AssignPermissions" asp-route-roleId="@role.Id" class="btn btn-primary btn-sm">Manage Permissions</a>
                    <a asp-action="ManageRoleUsers" asp-route-roleId="@role.Id" class="btn btn-secondary btn-sm">Manage Users</a>
                </td>
            </tr>
        }
    </tbody>
</table>
